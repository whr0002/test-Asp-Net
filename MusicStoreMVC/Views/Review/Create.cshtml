@model MusicStoreMVC.Models.Review

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Review</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.AlbumID, "AlbumID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("AlbumID", String.Empty)
                @Html.ValidationMessageFor(model => model.AlbumID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Contents, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Contents)
                @Html.ValidationMessageFor(model => model.Contents)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ReviewerEmail, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ReviewerEmail)
                @Html.ValidationMessageFor(model => model.ReviewerEmail)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
